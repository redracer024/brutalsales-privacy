# Brutal Sales App Environment Variables
# Copy this file to .env and fill in your actual values

# App Configuration
EXPO_PUBLIC_APP_NAME=BrutalSales
EXPO_PUBLIC_EAS_PROJECT_ID=your-eas-project-id
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUNDLE_ID=com.brutalsales.app

# Supabase Configuration (Required)
# Get these from your Supabase project settings
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key # Server-side only!

# DeepSeek API Configuration (Required for AI features)
EXPO_PUBLIC_DEEPSEEK_API_KEY=sk-your-deepseek-api-key
EXPO_PUBLIC_DEEPSEEK_BASE_URL=https://api.deepseek.com

# Firebase Configuration (Required for Analytics & Crashlytics)
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Google OAuth Configuration (Required for Google Sign-In)
GOOGLE_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# AdMob Configuration (Required for Ads)
# Create these in your AdMob account
EXPO_PUBLIC_ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxxxxxxxxxxxxx~xxxxxxxxxx
EXPO_PUBLIC_ADMOB_APP_ID_IOS=ca-app-pub-xxxxxxxxxxxxxxxx~xxxxxxxxxx
EXPO_PUBLIC_ADMOB_BANNER_ID=ca-app-pub-xxxxxxxxxxxxxxxx/xxxxxxxxxx
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID=ca-app-pub-xxxxxxxxxxxxxxxx/xxxxxxxxxx

# Google Play Billing Configuration
# Used for server-side purchase verification
GOOGLE_PLAY_API_KEY=your-google-play-api-key

# Analytics Configuration
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=true
EXPO_PUBLIC_ANALYTICS_DEBUG=false # Set to true for development

# Feature Flags
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=true
EXPO_PUBLIC_ENABLE_SOCIAL_FEATURES=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ADS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# API Configuration
EXPO_PUBLIC_API_URL=https://api.brutalsales.app # Your production API URL
EXPO_PUBLIC_API_VERSION=v1
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_MAX_RETRIES=3

# Cache Configuration
EXPO_PUBLIC_CACHE_TTL=3600
EXPO_PUBLIC_MAX_CACHE_SIZE=100

# Server Configuration (if running local server)
PORT=3000

# Stripe Configuration (Optional - for web payments)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret # Server-side only!

# Authentication
EXPO_PUBLIC_AUTH_REDIRECT_URL=https://your-domain.com/auth/callback